#!/usr/bin/perl

use strict;
use warnings;
use FindBin;
use File::Spec;
use lib File::Spec->catdir("$FindBin::Bin/..", 'lib');
use Punc;
use Punc::Master::Daemon;
use Getopt::Long;

GetOptions(
    '--port=i'    => \my $port,
    '--confdir=s' => \my $confdir,
);

$port    ||= 7081;
$confdir ||= "$FindBin::Bin/../etc";

my $daemon = Punc::Master::Daemon->new({
    port    => $port,
    confdir => $confdir,
    context => Punc->new->context,
});

$daemon->run;

